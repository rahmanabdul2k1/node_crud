html(lang='en')  
    head
        title= title
        link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
        script(src="js/bootstrap.min.js") 
    body
    div.container.col-sm-12.col-lg-8.mt-5
        div.row.justify-content-center
            div.col-md-12.col-lg-12.col-xl-8.col-xxl-4
                form(action="/" method="post" enctype="multipart/form-data")
                    div.text-center.mb-5
                        h2 Create User
                    div.form-floating.mt-4
                        input(type="text" name="name" class="form-control" placeholder="Name")
                        label Name
                    div.form-floating.mt-4
                        input(type="email" name="email" class="form-control" placeholder="Email")
                        label Email
                    div.form-floating.mt-4
                        input(type="number" name="phone" class="form-control" placeholder="Phone")
                        label Phone
                    div.form-floating.mt-4
                        input(type="text" name="password" class="form-control" placeholder="Password")
                        label Password
                    div.mt-4
                        button(type="submit" class="btn btn-primary" style="width:100%") Submit
                    div.mt-4
                        a(href="/" style="text-decoration:none") 
                            span(class="fw-semibold") View Users